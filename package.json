{
  "name": "pinot-pwa",
  "version": "1.0.0",
  "description": "Aplicación web progresiva para degustación de vinos",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./web/css/input.css -o ./web/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./web/css/input.css -o ./web/css/styles.css --watch",
    "build": "NODE_ENV=production tsx scripts/build.ts",
    "build:dev": "NODE_ENV=development vite build",
    "build:vite": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "dev": "pnpm run watch:css & vite",
    "deploy": "pnpm run build && firebase deploy --only hosting",
    "analyze": "vite build --mode analyze",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:security-rules": "vitest run tests/security-rules",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "emulators:start": "firebase emulators:start --only firestore",
    "emulators:exec": "firebase emulators:exec --only firestore",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.0.3",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "firebase-tools": "^15.1.0",
    "fs-extra": "^11.3.3",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.49",
    "react-router-dom": "^7.11.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "storybook": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "playwright": "^1.57.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@sentry/react": "^10.32.1",
    "@sentry/vite-plugin": "^4.6.1",
    "@tanstack/react-query": "^5.90.14",
    "firebase": "^12.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  }
}
